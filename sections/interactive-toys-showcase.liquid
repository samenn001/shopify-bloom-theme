{{ 'section-interactive-toys.css' | asset_url | stylesheet_tag }}

<section class="interactive-toys-section">
  <div class="page-width">
    <!-- Section Header -->
    <div class="toys-header">
      <h2 class="toys-title">{{ section.settings.title | default: "‚ú® COMPLETE THEIR PARADISE WITH INTERACTIVE PLAY ‚ú®" }}</h2>
      <p class="toys-subtitle">{{ section.settings.subtitle | default: "While trees give them a kingdom to rule, toys give them adventures to conquer" }}</p>
    </div>

    <!-- Three GIFs Showcase -->
    <div class="toy-gifs-grid">
      <div class="gif-item">
        {% if section.settings.gif1_image %}
          <div class="toy-gif-wrapper">
            <img 
              src="{{ section.settings.gif1_image | image_url: width: 400 }}" 
              alt="{{ section.settings.gif1_title }}"
              class="toy-gif"
              loading="lazy"
            >
          </div>
        {% endif %}
        <h4 class="gif-title">{{ section.settings.gif1_title | default: "Interactive Play" }}</h4>
      </div>

      <div class="gif-item">
        {% if section.settings.gif2_image %}
          <div class="toy-gif-wrapper">
            <img 
              src="{{ section.settings.gif2_image | image_url: width: 400 }}" 
              alt="{{ section.settings.gif2_title }}"
              class="toy-gif"
              loading="lazy"
            >
          </div>
        {% endif %}
        <h4 class="gif-title">{{ section.settings.gif2_title | default: "Active Engagement" }}</h4>
      </div>

      <div class="gif-item">
        {% if section.settings.gif3_image %}
          <div class="toy-gif-wrapper">
            <img 
              src="{{ section.settings.gif3_image | image_url: width: 400 }}" 
              alt="{{ section.settings.gif3_title }}"
              class="toy-gif"
              loading="lazy"
            >
          </div>
        {% endif %}
        <h4 class="gif-title">{{ section.settings.gif3_title | default: "Happy Cats" }}</h4>
      </div>
    </div>

    <!-- Why Combine Section -->
    <div class="why-combine-section">
      <h3 class="why-combine-title">{{ section.settings.why_combine_title | default: "WHY COMBINE TREES & TOYS?" }}</h3>
      
      <div class="daily-routine">
        <div class="routine-card">
          <div class="routine-icon">üåÖ</div>
          <h4>Morning</h4>
          <p>üéÆ Toy Play</p>
          <span>Energy Release</span>
        </div>
        <div class="routine-card">
          <div class="routine-icon">‚òÄÔ∏è</div>
          <h4>Afternoon</h4>
          <p>üå≥ Tree Nap</p>
          <span>Rest & Watch</span>
        </div>
        <div class="routine-card">
          <div class="routine-icon">üåô</div>
          <h4>Evening</h4>
          <p>üéØ Toy Hunt</p>
          <span>Playtime with You</span>
        </div>
      </div>
      
      <p class="happiness-stats">{{ section.settings.stats_text | default: "Studies show cats with both climbing and play options are 73% more active and happier" }}</p>
    </div>
  </div>
</section>

