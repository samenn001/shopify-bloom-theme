{{ 'section-interactive-toys.css' | asset_url | stylesheet_tag }}

<section class="interactive-toys-section">
  <div class="page-width">
    <!-- Section Header -->
    <div class="toys-header">
      <h2 class="toys-title">{{ section.settings.title | default: "‚ú® COMPLETE THEIR PARADISE WITH INTERACTIVE PLAY ‚ú®" }}</h2>
      <p class="toys-subtitle">{{ section.settings.subtitle | default: "While trees give them a kingdom to rule, toys give them adventures to conquer" }}</p>
    </div>

    <!-- Featured Toy Display -->
    <div class="featured-toy-container">
      <div class="featured-toy-media">
        {% if section.settings.featured_toy_video != blank %}
          <div class="toy-video-wrapper">
            <video 
              class="toy-video"
              controls
              playsinline
              muted
              autoplay
              loop
              preload="metadata"
            >
              <source src="{{ section.settings.featured_toy_video }}" type="video/mp4">
            </video>
            <div class="sound-indicator-pill" style="z-index: 9999 !important; cursor: pointer;" onclick="var v=this.parentElement.querySelector('video');if(v){v.muted=!v.muted;this.classList.toggle('sound-on');this.innerHTML=v.muted?'üîá Tap for Sound':'üîä Sound On';if(!v.muted){v.play();}}">
              üîá Tap for Sound
            </div>
          </div>
        {% elsif section.settings.featured_toy_image %}
          <img 
            src="{{ section.settings.featured_toy_image | image_url: width: 800 }}" 
            alt="{{ section.settings.featured_toy_title }}"
            class="toy-featured-image"
          >
        {% else %}
          <div class="toy-placeholder">
            <h3>Upload Toy Image or Video</h3>
          </div>
        {% endif %}
      </div>

      <div class="featured-toy-info">
        <div class="toy-badge">{{ section.settings.toy_badge | default: "üéÆ SMART PLAY TECHNOLOGY" }}</div>
        <h3 class="featured-toy-title">{{ section.settings.featured_toy_title | default: "AUTOMATIC ROTATING TRACK" }}</h3>
        
        <div class="toy-features">
          <div class="toy-feature">
            <span class="feature-icon">‚Ä¢</span>
            <span class="feature-text">Motion-activated sensors</span>
          </div>
          <div class="toy-feature">
            <span class="feature-icon">‚Ä¢</span>
            <span class="feature-text">3 Speed settings</span>
          </div>
          <div class="toy-feature">
            <span class="feature-icon">‚Ä¢</span>
            <span class="feature-text">Auto shut-off timer</span>
          </div>
          <div class="toy-feature">
            <span class="feature-icon">‚Ä¢</span>
            <span class="feature-text">Whisper-quiet motor</span>
          </div>
        </div>

        <div class="toy-rating">
          <div class="stars">
            <span class="star">‚≠ê</span>
            <span class="star">‚≠ê</span>
            <span class="star">‚≠ê</span>
            <span class="star">‚≠ê</span>
            <span class="star">‚≠ê</span>
          </div>
          <span class="rating-count">({{ section.settings.review_count | default: "2,847" }} Reviews)</span>
        </div>

        <div class="toy-pricing">
          {% if section.settings.compare_price != blank and section.settings.compare_price != "0" %}
            <span class="compare-price">${{ section.settings.compare_price }}</span>
          {% endif %}
          <span class="current-price">${{ section.settings.price | default: "39.99" }}</span>
          {% if section.settings.compare_price != blank and section.settings.compare_price != "0" %}
            <span class="discount-badge">SAVE 20%</span>
          {% endif %}
        </div>

        <div class="toy-actions">
          <button class="btn-add-cart">Add to Cart</button>
          <button class="btn-quick-view">Quick View</button>
        </div>
      </div>
    </div>

    <!-- Additional Toys Grid -->
    <div class="additional-toys">
      <h3 class="additional-toys-title">{{ section.settings.grid_title | default: "MORE INTERACTIVE TOYS TO EXPLORE:" }}</h3>
      <div class="toys-grid">
        <div class="toy-card">
